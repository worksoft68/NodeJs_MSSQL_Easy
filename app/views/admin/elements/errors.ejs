<% if (typeof errors !='undefined' ) { %>
    <div class="alert alert-danger alert-dismissible">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
        <h5><i class="icon fas fa-exclamation-triangle"></i> Error!</h5>
        <ul class="list-unstyled mb-0">
            <% var keysErrors=Object.keys(errors); var countKey=keysErrors.length; for(let i=0; i < countKey; i++){ var
                strWord=keysErrors[i]; var msg=errors[strWord]; var l=strWord.length; var keyWord=strWord.substring(0,
                1).toUpperCase() + strWord.substring(1, l); %>
                <li><b>
                        <%= keyWord %>
                    </b>: <%= msg %>
                </li>
                <%} %>
        </ul>
    </div>
    <% } %>